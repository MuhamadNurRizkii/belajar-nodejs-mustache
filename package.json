{
  "name": "belajar-nodejs-unit-test",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.js",
  "scripts": {
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "displayName": {
      "name": "Tes",
      "color": "blue"
    },
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 75,
        "lines": 75,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "keywords": [],
  "author": "Muhamad Nur Rizki",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@babel/preset-env": "^7.28.6",
    "babel-jest": "^30.2.0",
    "jest": "^30.2.0"
  }
}
